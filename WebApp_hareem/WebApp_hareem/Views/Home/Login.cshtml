@model WebApp_hareem.Models.User
@{
    ViewData["Tiltle"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 300px;
            margin: 100px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"],
        .login-btn {
            width: 100%;
            background-color: #4caf50;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover,
            .login-btn:hover {
                background-color: #45a049;
            }

        .error {
            color: red;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Login</h2>
        <form asp-action="Log">
            <div class="error"></div>
            <label for="username">Username:</label>
            <input type="text" id="username" asp-for="UName" placeholder="username">
            <label for="password">Password:</label>
            <input type="password" id="password" asp-for="UPass"placeholder="password">
            <button type="submit" value="Login">Login </button>
        </form>
        <a asp-controller="Home" asp-action="Signin">Register</a>
    </div>

</body>
</html>

